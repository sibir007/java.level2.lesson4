<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="center" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ru.geekbrains.java.level2.lesson.sample.Controller">
     <TextField fx:id="mesField" onAction="#clickHelloBtn2" promptText="Напиши здесь свой текст" />
    <HBox>
        <Button onAction="#clickHelloBtn" text="Hello" />
        <Button onAction="#clickHelloBtn2" text="Hello" />
    </HBox>
    <TextArea fx:id="MainTextArea" editable="false" VBox.vgrow="ALWAYS" />

    <FlowPane prefHeight="31.0" prefWidth="549.0">
        <Button text="1" />
        <Button text="2" />
        <Button text="3" />
    </FlowPane>

    <GridPane>
        <Button text="1" GridPane.columnIndex="0" GridPane.rowIndex="0" />
        <Button text="2" GridPane.columnIndex="1" GridPane.rowIndex="0" />
        <Button text="3" GridPane.columnIndex="0" GridPane.rowIndex="1" />
        <Button text="4" GridPane.columnIndex="1" GridPane.rowIndex="1" />
        <Button text="5" GridPane.columnIndex="0" GridPane.rowIndex="2" />
        <Button text="6" GridPane.columnIndex="1" GridPane.rowIndex="2" />
        <columnConstraints>
            <ColumnConstraints maxWidth="30" minWidth="30" prefWidth="30" />
            <ColumnConstraints maxWidth="30" minWidth="30" prefWidth="30" />
        </columnConstraints>
        <rowConstraints>
            <RowConstraints maxHeight="30" minHeight="30" prefHeight="30" />
            <RowConstraints maxHeight="30" minHeight="30" prefHeight="30" />
            <RowConstraints maxHeight="30" minHeight="30" prefHeight="30" />
        </rowConstraints>
    </GridPane>

</VBox>
